extends layout

block content
    h1 #{title}
    form( method='POST', action='/tasks/add')
        #form-group
            label Task Name:
            input.form-control(name='taskName', type='text')
        #form-group
            label Description:
            textarea.form-control(name='content', type='text')
        #form-group
            label Due Date:
            input.form-control(name='duedate', type='text')
        #form-group
            label Priority:
            input.form-control(name='priority', type='checkbox')
        br
        input.btn.btn-primary(type='submit', value='Submit')
